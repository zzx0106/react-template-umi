{
  // 隐藏对应文件
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.idea": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[less]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // "[json]": {
  //   "editor.defaultFormatter": "esbenp.prettier-vscode"
  // },
  "editor.tabSize": 2,
  // 注意：如果项目根目录下存在.editorconfig文件，则prettier会优先读取它文件，则prettier会优先读取它
  // 如何避免: 1.删除.editorconfig文件
  // 2.如下配置
  // "prettier.useEditorConfig": false,

  "prettier.printWidth": 140, // 超过最大值换行
  "prettier.bracketSpacing": true,
  "prettier.jsxBracketSameLine": true,
  "prettier.trailingComma": "es5", //尽可能控制尾随逗号的输出。 有效选项： '无' - 无尾随逗号 ' es5' - 在ES5中有效的尾随逗号（对象，数组等） 'all' - 尾随逗号 尽可能（函数参数）
  "prettier.tabWidth": 2, // 缩进字节数
  "prettier.useTabs": false, // 缩进不使用tab，使用空格
  "prettier.semi": true, // 句尾添加分号
  "prettier.singleQuote": true, // 使用单引号代替双引号
  "prettier.quoteProps": "as-needed", // 对象的 key 仅在必要时用引号
  "prettier.arrowParens": "always", //  (x) => {} 箭头函数参数只有一个时是否要有小括号。avoid：省略括号
  "prettier.endOfLine": "auto", // 结尾是 \n \r \n\r auto
  // "prettier.disableLanguages": ["json"], // 已经有.prettierignore
  "prettier.htmlWhitespaceSensitivity": "ignore",
  "i18n-ally.localesPaths": ["src/i18n/lang", "src/locales"],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.enabledParsers": ["js", "json"],
  "editor.foldingStrategy": "indentation"
}
